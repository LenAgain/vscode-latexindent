{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": "$esbuild",
			"presentation": {
				"reveal": "never"
			},
			"group": "build"
		}
	]
}
